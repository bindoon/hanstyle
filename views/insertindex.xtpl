<html>
<!--下面的CSS放在 HEAD 中-->
<link rel="stylesheet" href="//g.alicdn.com/sui/sui3/0.0.13/css/sui.min.css">
<!--下面的JS放在 body 的最后-->
<script type="text/javascript" src="//g.alicdn.com/sj/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="//g.alicdn.com/sui/sui3/0.0.13/js/sui.min.js"></script>
<title>配置后台</title>
</html>

<body>

<div class="bs-example" style="  margin-right: 0;
  margin-left: 0;
  background-color: #fff;
  border-color: #ddd;
  border-width: 1px;
  border-radius: 4px 4px 0 0;
  -webkit-box-shadow: none;
  box-shadow: none;">
<h2>{{banner.name}}</h2>
<table class="table">
    <thead>
        <tr>
          <th>#</th>
          <th>标题</th>
          <th>描述</th>
          <th>图片</th>
          <th>链接</th>
          <th>操作</th>
        </tr>
    <tbody>

    {{#each (banner.list)}}
        <tr>
          <th scope="row">{{xindex+1}}</th>
          <td>{{title}}</td>
          <td>{{desc}}</td>
          <td>{{pic}}</td>
          <td>{{link}}</td>
          <td><a href="javascript:;" data-id="{{_id}}" />删除</a></td>
        </tr>
    {{/each}}
      </tbody>
    </thead>
</table>

<h2>{{entrance.name}}</h2>
<table class="table">
    <thead>
        <tr>
          <th>#</th>
          <th>标题</th>
          <th>描述</th>
          <th>图片</th>
          <th>链接</th>

        </tr>
    <tbody>
    {{#each (entrance.list)}}
        <tr>
          <th scope="row">{{xindex+1}}</th>
          <td>{{title}}</td>
          <td>{{desc}}</td>
          <td>{{pic}}</td>
          <td>{{link}}</td>
          <td><a href="javascript:;" data-id="{{_id}}" />删除</a></td>
        </tr>
    {{/each}}
      </tbody>
    </thead>
</table>

<h2>{{expert.name}}</h2>
<table class="table">
    <thead>
        <tr>
          <th>#</th>
          <th>标题</th>
          <th>描述</th>
          <th>图片</th>
          <th>链接</th>
        </tr>
    <tbody>
    {{#each (expert.list)}}
        <tr>
          <th scope="row">{{xindex+1}}</th>
          <td>{{title}}</td>
          <td>{{desc}}</td>
          <td>{{pic}}</td>
          <td>{{link}}</td>
          <td><a href="javascript:;" data-id="{{_id}}" />删除</a></td>
        </tr>
    {{/each}}
      </tbody>
    </thead>
</table>

</div>


新增：
    <form  id="submitform">
    楼层：    <select name="type">
            <option value=1 >{{banner.name}}</option>
            <option value=2 >{{entrance.name}}</option>
            <option value=3 >{{expert.name}}</option>
        </select><br>
    标题：<input name="title" ><br>
    描述：<input name="desc" ><br>
    图片：<input name="pic" ><br>
    链接：<input name="link" ><br>
    </form>
    <input type="submit" id="submit">

</body>
<script type="text/javascript">

$('#submit').on('click',function(){
    $.ajax({
        url:"/insertIndex",
        method:'post',
        data:$('#submitform').serialize(),
        success:function (data) {
            location.reload();
        }
    })
});

$('table').delegate('a','click',function(){
    var $this = $(this);
    var id = $(this).data('id');
    $.ajax({
        url:"/removeIndex",
        method:'post',
        data:{id:id},
        success:function (data) {
            var $dom = $this.parent().parent();
            $dom.animate({opacity:0},'fast',function(){
                $this.parent().parent().remove();
            })
        }
    })})

</script>
</html>